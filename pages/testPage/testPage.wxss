/* pages/testPage/testPage.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.content {
  font-size: 40rpx;
  color: #88868b;
}
.btn_item {
  margin: 2vw;
  font-size: 35rpx;
  border: none;
  
}
.chose-btns {
  padding: 3vw 5vw;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
}
.tablist {
  display: flex;
  height:80rpx;
}
.img {
  width: 400rpx;
  height: 400rpx;
  
}
.tablist .item {
  flex:auto;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  font-size: 11pt;
}
.tablist .item.select::after {
    content: "";
    height: 3rpx;
    display: block;
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    background: #e64340;
}
.container{
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    /* border: 3px solid #e64340; */
}
.out {
  flex-grow: 2;
  height: 1100rpx;
  width: 100%;
  /* border: 3px solid #e64340; */
}
.content {
  height:95%;
  display: flex;
  flex-direction: column;
  /* border: 3px solid #e64340; */
}
.statustab{
  border-top:1px solid #eee;
  font-size: 40rpx;
  color: #736395;
  text-align: center;
  width: 100%;
  position: fixed;
  bottom: 0
}
.radio {
  display: flex;
  flex-direction: column;
}
.radio .wx-checkbox-input.wx-checkbox-input-checked {
  background: red;
}
#submit_exam {
  display: inline;

}
#simlated {
  display: inline;
}
