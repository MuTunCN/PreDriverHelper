/* pages/user/user.wxss */
page {
  background-color: #f6f5ec;
}
.userinfo {  
  position: relative;  
  width: 750rpx;  
  color: #999d9c;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #FFF;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
.userinfo{  
  font-size: 40px;  

}  